{
  "name": "rollup-umd",
  "author": "Andy Axton",
  "version": "1.0.0",
  "description": "A simple starter for UMD libraries",
  "main": "dist/bundle.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/a-axton/rollup-umd"
  },
  "config": {
    "moduleName": "Library"
  },
  "scripts": {
    "start": "yarn run js:dev | yarn run styles:dev | yarn run browser-sync",
    "js:dev": "rollup -c --watch",
    "js:prod": "rollup -c --environment PROD:true",
    "styles:dev": "node-sass assets/styles/main.scss dist/main.css --watch assets/styles",
    "styles:prod": "node-sass assets/styles/main.scss dist/main.css ; postcss 'dist/main.css' -o 'dist/main.css'",
    "browser-sync": "browser-sync start --server 'dist' --files 'dist' --ss 'public'",
    "build": "yarn run js:prod && yarn run styles:prod",
    "test": "jest",
    "prepublish": "yarn run test && yarn run build"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.6",
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.2",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "browser-sync": "^2.18.13",
    "cssnano": "^3.10.0",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "jest": "^21.2.1",
    "node-sass": "^4.5.3",
    "postcss-cli": "^4.1.1",
    "rollup": "^0.52.0",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-eslint": "^3.0.0",
    "rollup-plugin-json": "^2.1.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-uglify": "^1.0.1",
    "rollup-watch": "^3.2.2",
    "uglify-js": "^2.8.18"
  }
}
